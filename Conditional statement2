#include<stdio.h>
int main()
{
  printf("Pick an item:\n.Pen\n2.Pencil\n3.Eraser\n4.Book");
  int choice=0;
  scanf("%d",& choice);
switch(choice)
{
   case 1:
     printf("You picked Pen.");
   case 2:
     printf("You picked Pencil.");
   case 3:
     printf("You picked Eraser.");
   case 4:
     printf ("You picked Book.");
   default:printf("Invalid choice");
 }
}
